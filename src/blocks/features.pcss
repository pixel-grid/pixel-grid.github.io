.features {
    margin-top: calc($grid * 15 + 4px);
    margin-bottom: calc($grid * 12 + 8px);
    @mixin container;

    @mixin screen-md {
        margin-bottom: calc($grid * 12 + 7px);
    }
    @mixin screen-sm-to-xs {
        margin-bottom: calc($grid * 4 + 14px);
    }
    @mixin screen-xxs {
        margin-bottom: calc($grid * 4 + 13px);
    }

    &__heading {
        @mixin column-xlg 12;
        @mixin column-lg 12;
        @mixin column-md 12;
        @mixin column-sm 12;
        @mixin column-xs 12;
        @mixin column-xxs 12;
    }

    &__heading__description {
        @mixin column-xlg 12;
        @mixin column-lg 12;
        @mixin column-md 12;
        @mixin column-sm 12;
        @mixin column-xs 12;
        @mixin column-xxs 12;
    }

    &__item {
        margin-top: 1px;
        @mixin column-xlg 4;
        @mixin column-lg 4;
        @mixin column-md 4;
        @mixin column-sm 12;
        @mixin column-xs 12;
        @mixin column-xxs 12;
    }

    &__item-content {
        margin-left: calc($grid * 4);
        margin-right: calc($grid * 4);
        padding: calc($grid * 8) calc($grid * 8) calc($grid * 16 - 3px);
        min-height: calc($grid * 68.5);
        box-sizing: border-box;
        background: linear-gradient(map(colors, bluegrey, 50), color(map(colors, bluegrey, 100) a(10%)));
        border-radius: 4px;
        display: flex;
        flex-direction: column;
        position: relative;

        &:after {
            content: "";
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            height: calc($grid * 16 - 3px);
            background-image: url("data:image/svg+xml;base64,");
            background-position: bottom -1px center;
            background-size: calc(100% + 2px);
            background-repeat: no-repeat;
        }

        @mixin screen-sm-to-xs {
            margin-left: calc($grid * 2);
            margin-right: calc($grid * 2);
            margin-bottom: calc($grid * 4);
            padding: calc($grid * 5);
            min-height: 0;
            background: map(colors, bluegrey, 50);

            &:after {
                display: none;
                background: none;
            }
        }
        @mixin screen-xxs {
            margin-left: 0;
            margin-right: 0;
            margin-bottom: calc($grid * 4);
            padding: calc($grid * 2);
            min-height: 0;
            background: map(colors, bluegrey, 50);

            &:after {
                display: none;
                background: none;
            }
        }

        &_accent {
            background: linear-gradient(color(map(colors, blue, 600) a(60%)), map(colors, blue, 600));

            @mixin screen-sm-down {
                background: map(colors, bluegrey, 50);
            }
        }
    }

    &__item-header {
        margin: 5px 0 calc($grid + 2px);
        order: 2;
        font-size: 20px;
        line-height: 24px;
        color: map(colors, grey, 800);

        &_accent {
            @mixin screen-md-up {
                color: map(colors, grey, 50);
            }
        }
    }

    &__item-icon-container {
        height: calc($grid * 17);

        @mixin screen-sm-down {
            display: none;
        }
    }

    &__item-icon {
        order: 1;
        fill: map(colors, blue, 400);

        &_accent {
            @mixin screen-md-up {
                fill: map(colors, grey, 50);
            }
        }
    }

    &__item-description {
        margin: 0;
        order: 3;
        font-size: 16px;
        line-height: 24px;
        color: map(colors, grey, 700);

        &_accent {
            @mixin screen-md-up {
                color: map(colors, grey, 50);
            }
        }
    }
}
